{{#fancyInput}}
<div class="fancy-input">
    <label class="pe-textLabelInput__label--label_error" for="{{id}}">{{label}}</label>
    <input type="text" class="pe-textInput--input_error" id="{{id}}" aria-describedby="{{ariaId}}" aria-invalid="true" placeholder="{{placeholder}}">
    <span class="pe-inputError_underline"></span>
    <span id="{{ariaId}}" class="pe-input--error_message">{{>pearson-single-icon}} {{error}}</span>
</div>
{{/fancyInput}}
